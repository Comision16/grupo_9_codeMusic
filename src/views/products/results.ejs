<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %> 
<body>
    <%- include('../partials/header') %>
        <main>

            <% if (result.length > 0 && keywords) { %>
                <h4 class="result">Resultado de la búsqueda: <%= keywords %></h4>
            <section class="index_section_products">
            <% result.forEach(result => { %>
                 
                <article class="index_product">
                    <div class="index_product_img"><img src="<%="/img/imgProducts/" + result.image %>" alt="product"></div>
                    <hr>
                    <h3 class="index_product_title"><%= result.name %></h3>
                    <div class="index_product_bottom">
                        <p class="precio">$<%= result.price %><em class="decimales"></em></p>
                        <p class="index_product_envío">Envío Gratis</p>
                        <a href="/products/productDetail/<%=result.id %>" class="index_button_product">Ver más</a>
                    </div>
                </article>
            <% }) %>
        </section>
        <% }else{ %>
            <p class="result">No hay resultados 😒👨‍🦯</p>
            <% } %>

        </main>

        <div id="whatsapp">
            <a href="#">
                <i class="fa-brands fa-whatsapp"></i>
            </a>
        </div>

        <%- include('../partials/footer') %> 

    </body>
    
    </html>