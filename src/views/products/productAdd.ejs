<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/img/LOGO-CODEMUSIC-copia.png" />
    <script
      src="https://kit.fontawesome.com/985c010c44.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title><%= title %></title>
  </head>

  <body class="body_add">
    <%- include('../partials/header') %>
    <main class="main_formulario">
      <h4 class="add_titulo">Agregar producto</h4>

      <form
        class="main_formulario_contenedor needs-validation"
        enctype="multipart/form-data" action="/products/productAdd" method="POST"
        novalidate
      >
        <div>
          <label for="name">Nombre del producto:</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Ejempo: Guitarra Electrica"
          />
          <span id="msgName"></span>
          <% if (locals.errors && errors.name) { %>
          <p class="register_errors"><%= errors.name.msg %></p>
          <% } %>
        </div>

        <div class="input_img-principal">
          <label for="image1" class="btn btn-secondary button_img"
            >Imagen principal:</label
          >
          <input
            type="file"
            class="form-control btn-sm"
            name="image"
            id="image1"
            accept="image/*"
            hidden
          />
          <span id="msgImg"></span>
          <% if (locals.errors && errors.images) { %>
          <p class="register_errors"><%= errors.images.msg %></p>
          <% } %>
          <div class="div_imageView_card">
            <img src="" alt="" height="100%" id="imageView">
          </div>
        </div>

        <div class="input_img-secundary">  
          <label for="image2" class="btn btn-secondary button_img"
            >Imágenes secundarias<i>(Opcional):</i></label
          >
          <input
            type="file"
            class="form-control"
            name="images"
            id="image2"
            accept="image/*"
            multiple
            hidden
          />
          <div class="div_imageView2">
            <p class="div_imageView2_card">
              <img src="" alt="" height="100%" id="imageView1" />
            </p>
            <p class="div_imageView2_card">
                <img src="" alt="" height="100%" id="imageView2" />
              </p>
            <p class="div_imageView2_card">
              <img src="" alt="" height="100%" id="imageView3" />
            </p>
          </div>
        </div>

        <div>
          <label for="price">Precio:</label>
          <input
            type="number"
            class="form-control"
            id="price"
            name="price"
            placeholder="Ejemplo: $50.000"
          />
          <span id="msgPrice"></span>
          <% if (locals.errors && errors.price) { %>
          <p class="register_errors"><%= errors.price.msg %></p>
          <% } %>
        </div>

        <div>
          <label for="discount">Descuento:</label>
          <input
            type="number"
            class="form-control"
            id="discount"
            name="discount"
          />
          <span id="msgDiscount"></span>
        </div>

        <div>
          <label for="description">Descripción:</label>
          <textarea
            rows="5"
            class="form-control"
            id="description"
            name="description"
          ></textarea>
          <p id="descriptionInfo" style="align-self: flex-start;" hidden><span id="numberCharacters"></span> disponibles</p>
          <span id="msgDescription"></span>
          <% if (locals.errors && errors.description) { %>
          <p class="register_errors"><%= errors.description.msg %></p>
          <% } %>
        </div>

        <div>
          <label for="brand" class="form-label">Elige una marca:</label>
          <select class="form-control" name="brandId" id="brand">
            <option value="" hidden>Elegí una marca</option>
            <% brands.forEach(({id,name}) => { %>
            <option value="<%= id %>"><%= name %></option>
            <% }) %>
          </select>
        </div>

        <div>
          <label for="color" class="form-label">Elige un color:</label>
          <select class="form-control" name="colorId" id="color">
            <option value="" hidden>Elegí un color</option>
            <% colors.forEach(({id,name}) => { %>
            <option value="<%= id %>"><%= name %></option>
            <% }) %>
          </select>
        </div>

        <div>
          <label for="category" class="form-label">Elige una categoria:</label>
          <select class="form-control" name="categoryId" id="category">
            <option value="" hidden>Elegir</option>
            <% categories.forEach(({id,name}) => { %>
            <option value="<%= id %>"><%= name %></option>
            <% }) %>
          </select>
          <span id="msgCategory"></span>
          <% if (locals.errors && errors.categoryId) { %>
          <p class="register_errors"><%= errors.categoryId.msg %></p>
          <% } %>
        </div>

          <div class="main_formulario_status">
            <label for="status" name="status">Oferta:</label>
            <div>
            <p class="main_formulario_status-radio">
              <input type="radio" name="status" id="status" value="1" /> En
              oferta
            </p>
            <p class="main_formulario_status-radio">
              <input type="radio" name="status" id="status" value="0" />
              Sin oferta
            </p>
            </div>
          </div>

        <div class="formulario_enviar">
          <button type="submit">Enviar</button>
        </div>
      </form>
    </main>

    <%- include('../partials/footer') %>

    <script src="/js/productAddValidator.js"></script>
    <%- include('../partials/script') %>
  </body>
</html>
